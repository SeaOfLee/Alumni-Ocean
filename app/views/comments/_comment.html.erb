  <p><%= simple_format(comment.content) %></p>
  <p><span class='post_time'><%= comment.user.first_name %> <%= comment.user.last_name %> replied <%= time_ago_in_words(comment.created_at) %> ago</span></p>

    <% if current_user == comment.user %>
      <%= link_to " Edit", edit_post_comment_path(comment.post, comment) %>  |
      <%= link_to " Delete", [comment.post, comment], method: :delete, data: {confirm: "Are you sure?"} %>
    <% end %>
  <hr />
