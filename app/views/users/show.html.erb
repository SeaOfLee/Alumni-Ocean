<%= render 'layouts/sidenav' %>

  <div class="main_container">

    <div class='row clearfix'>
      <div class='column full'>
        <% if current_user == @user %>
        <h1>Welcome, <%= @user.first_name %>.</h1>
        <% else %>
        <h1>Meet <%= @user.first_name %> <%= @user.last_name %></h1>
        <% end %>
      </div>
    </div>

    <div class='row clearfix  profile_stuff'>
      <div class='column third'>
        <%= image_tag @user.avatar.url, class: 'medium_profile' %>
      </div>
      <div class='column two-thirds'>
        <p><span class='label_black'>Current Location: </span><%= @user.current_location %></p>
        <p>
          <span class='label_black'>Program Attended: </span><%= @user.program_attended %><br>
            <span class='label_black'>Campus: </span><%= @user.campus %><br>
            <span class='label_black'>Cohort: </span><%= @user.cohort %>
        </p>
        <p><%= @user.bio %></p>
        <p>Contact: <%= mail_to @user.email %></p>
      </div>
    </div>

    <div class='row clearfix meta-info'>
      <div class='column full'>
        <hr />
      </div>
      <div class='column half'>
        <span class='post_time'>Posted</span>
      </div>
      <div class='column half'>
        <span class="edit_delete">
          <% if current_user == @user %>
            <%= link_to "Edit", edit_user_path(@user) %>
          <% end %> |
          <% if current_user == @user %>
            <%= link_to "Delete", user_path(@user), method: :delete, data: { confirm: "Are you sure you want to delete this?" }%>
          <% end %>
        </span>
      </div>
    </div>
</div>
