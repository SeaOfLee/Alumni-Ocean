<%= render 'layouts/sidenav' %>

  <div class="main_container">

    <div class='row clearfix'>
      <div class='column two-fifths'>
        <%= form_tag search_activities_path, method: :get do %>
          <%= text_field_tag :search, params[:search], :placeholder => "Search in events:" %>
      </div>
      <div class='column fifth'>
          <%= submit_tag("Search") %>
        <% end %>
      </div>
    </div>

    <div class='row clearfix'>
      <div class='column full'>
        <h1>Most Recent Events</h1>
      </div>
    </div>

    <div class='row clearfix'>
      <div class='column full'>
        <%= link_to "New Event", new_activity_path, class: 'button' %>
      </div>
    </div>

    <div class='row clearfix'>
      <div class='column full'>
        <% @activities.each do |activity| %>
          <h2><%= link_to activity.event_name, activity, class: 'content_title' %></h2>
          <p><span class='label_black'>Date: </span><%= activity.event_date %><br />
             <span class='label_black'>Location: </span><%= activity.event_location %></p>
             <p><span class='post_time'>Posted <%= time_ago_in_words(activity.created_at) %> ago by <%= activity.user.first_name %> <%= activity.user.last_name %></span></p>
          <hr />
        <% end %>
      </div>
    </div>

    <div class="row clearfix">
      <div class="column full pagination">
        <%= will_paginate @activities %>
      </div>
    </div>

</div>
