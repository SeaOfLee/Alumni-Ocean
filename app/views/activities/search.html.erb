<%= render 'layouts/sidenav' %>

<div class="main_container">

  <%= form_tag search_activities_path, method: :get do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag("Search") %>
  <% end %>

  <% @activities.each do |activity| %>
    <h3><%= link_to activity.event_name, activity %></h3>
      <p><%= activity.event_location %></p>
      <p>Posted <%= time_ago_in_words(activity.created_at) %> ago by <%= activity.user.first_name %> <%= activity.user.last_name %></p>
    <hr />
  <% end %>

</div>
