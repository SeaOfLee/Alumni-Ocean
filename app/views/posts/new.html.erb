<%= render 'layouts/sidenav' %>

  <div class="main_container">

    <div class='row clearfix'>
      <div class='column full'>
        <h1>New Post</h1>
      </div>
    </div>

      <%= form_for @post do |f| %>
    <div class='row clearfix'>
      <div class='column full'>
        <%= f.text_field :title, :placeholder => "Enter a short title for your post..." %>
      </div>
    </div>
    <div class='row clearfix'>
      <div class='column full'>
        <%= f.text_area :content, :placeholder => "Give more details here..." %>
      </div>
    </div>
     <div class='row clearfix'>
      <div class='column full'>
        <%= f.submit 'Add your post', class: 'button' %>
      </div>
    </div>

  <% end %>

  <hr>
  Current User ID: <%= session["user_id"].inspect %><br>
  <%= params.inspect %>
  <br>
  <% if current_user != nil %>
  Logged in as: <%= current_user.email %> |
  <!-- method delete overrides button's normal behavior of POST -->
    <%= link_to "Log Out", sessions_path, method: :delete %>
  <% else %>
    <%= link_to 'Sign In', new_sessions_path %>
  <% end %>

</div>
