<%= render 'layouts/sidenav' %>

  <div class="main_container">

    <div class='row clearfix'>
      <div class='column full'>
        <h1>Edit a Post</h1>
      </div>
    </div>

    <%= form_for @post do |f| %>
    <div class='row clearfix'>
      <div class='column full'>
        <%= f.text_field :title, :placeholder => "Enter a short title for your post..." %>
      </div>
    </div>
    <div class='row clearfix'>
      <div class='column full'>
        <%= f.text_area :content, :placeholder => "Give more details here..." %>
      </div>
    </div>
     <div class='row clearfix'>
      <div class='column full'>
        <%= f.submit 'Update your post', class: 'button'  %>
      </div>
    </div>
    <% end %>

    <div class='row clearfix'>
      <div class='column full'>
        <br >
        <%= link_to "Cancel", post_path, class: "link_secondary" %>
      </div>
    </div>


</div>
