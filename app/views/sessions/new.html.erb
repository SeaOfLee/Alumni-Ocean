<div class="container black_back">
  <div class="row clearfix">
  <div class="column full login">

      <h1>Log In To Alum.ly</h1>

      <div class='session'>
        <%= form_for @user, url:{ :controller => 'sessions', :action => "create"} do |f| %>
        <%= f.text_field :email, :placeholder => "Email" %><br>
        <%= f.password_field :password, :placeholder => "Password" %><br>
        <%= f.submit "Sign In", class: 'button' %><br>
        <% end %><br>
        <a href="../users/new" class="link_secondary">Sign Up</a>
      </div>

  </div>
</div>
